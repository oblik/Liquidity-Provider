{
  "name": "auth-api",
  "version": "1.0.0",
  "description": "Authentication API with Node.js, TypeScript, and MongoDB",
  "main": "dist/server.js",
  "type": "commonjs",
  "scripts": {
    "build": "tsc",
    "start": "node --max-old-space-size=1024 --expose-gc dist/server.js",
    "dev": "nodemon --exec \"node --max-old-space-size=512 -r ts-node/register\" src/server.ts",
    "dev:legacy": "nodemon src/server.ts",
    "test": "jest",
    "postbuild": "echo 'Build completed - checking dist folder' && ls -la dist/",
    "prebuild": "rm -rf dist",
    "health": "node -e \"console.log('Node version:', process.version); console.log('Memory limit test passed')\"",
    "create-api-key": "ts-node scripts/createApiKey.ts",
    "create-admin-key": "ts-node scripts/createAdminApiKey.ts",
    "batch-create-keys": "ts-node scripts/batchCreateApiKeys.ts",
    "list-api-keys": "ts-node scripts/listApiKeys.ts",
    "revoke-api-key": "ts-node scripts/revokeApiKey.ts",
    "manage-api-keys": "ts-node scripts/manageApiKeys.ts",

    "//": "=== ADMIN MANAGEMENT SCRIPTS ===",
    "grant-admin": "ts-node src/scripts/grantAdmin.ts",
    "simple-admin": "ts-node src/scripts/simpleAdmin.ts",
    "admin": "npm run grant-admin --",
    "admin-interactive": "npm run grant-admin -- --interactive",
    "list-admins": "npm run grant-admin -- --list-admins",
    "create-admin": "npm run grant-admin -- --create-admin",
    "remove-admin": "npm run grant-admin -- --remove",

    "//": "=== QUICK ADMIN COMMANDS ===",
    "make-admin": "npm run grant-admin -- --email",
    "make-superadmin": "npm run grant-admin -- --email",
    "admin-help": "npm run grant-admin -- --help",

    "//": "=== DATABASE UTILITIES ===",
    "db:seed": "ts-node src/scripts/seedDatabase.ts",
    "db:reset": "ts-node src/scripts/resetDatabase.ts",
    "db:migrate": "ts-node src/scripts/migrateDatabase.ts",
    "db:backup": "node -e \"console.log('Database backup functionality - implement as needed')\"",

    "//": "=== DEVELOPMENT UTILITIES ===",
    "check-admins": "npm run list-admins",
    "admin-status": "npm run grant-admin -- --list-admins",
    "user-info": "node -e \"console.log('Run: npm run grant-admin -- --interactive for user management')\"",

    "//": "=== PRODUCTION HELPERS ===",
    "prod:grant-admin": "NODE_ENV=production npm run grant-admin --",
    "prod:list-admins": "NODE_ENV=production npm run list-admins",
    "logs": "tail -f logs/admin.log 2>/dev/null || echo 'No admin logs found'"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@sendinblue/client": "^3.3.1",
    "@solana/spl-token": "^0.4.13",
    "@solana/web3.js": "^1.98.2",
    "axios": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "ethers": "^6.14.4",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "nodemailer": "^6.9.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "@types/axios": "^0.9.36",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.4",
    "@types/nodemailer": "^6.4.14",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  },
  "nodemonConfig": {
    "watch": ["src"],
    "ext": "ts,js,json",
    "ignore": ["dist", "node_modules"],
    "exec": "node --max-old-space-size=512 -r ts-node/register src/server.ts"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "mongodb",
    "authentication",
    "jwt",
    "liquidity",
    "solana",
    "ethereum",
    "admin",
    "rbac",
    "role-based-access",
    "user-management"
  ],
  "author": "ABOKI Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aboki/liquidity-provider-api"
  },
  "homepage": "https://aboki.com",
  "bugs": {
    "url": "https://github.com/aboki/liquidity-provider-api/issues"
  }
}